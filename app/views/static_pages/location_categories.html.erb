<div class="jumbotron">
  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
          <tr>
              <th>id</th>
              <th>name</th>
          </tr>
      </thead>
      <tbody>
          <% @location_categories.each do |location_c| %>
            <tr>
                <td><%= location_c.d_id %></td>
                <td><%= location_c.name %></td>
            </tr>
          <% end %>
      </tbody>
  </table>
</div>
<script type="text/javascript">
    $(document).on('ready', function () {
        $('#example').DataTable();
    });
</script>